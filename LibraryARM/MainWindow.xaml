<Window x:Class="LibraryARM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryARM"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="450" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="LightGreen"></Rectangle>
        <Rectangle Grid.Row="2" Fill="LightGreen"></Rectangle>
        <Image Source="Assets/Img/icon.png" Width="125" HorizontalAlignment="Center"></Image>
        <Frame x:Name="FrameMain" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
