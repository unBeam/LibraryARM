<Page x:Class="LibraryARM.Veiw.Pages.AddLibrian"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryARM.Veiw.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1350"
      Title="AddLibrian">

    <Grid Margin="0,0,0,-58">
        <StackPanel Margin="20">
            <Label Content="Логин"/>
            <TextBox x:Name="Login"/>

            <Label Content="Пароль"/>
            <TextBox x:Name="Password"/>

            <Button Content="Добавить" Click="AddBook_Click" Margin="0,5,0,0"/>
            <Button Content="Назад" Click="Back_Click" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Page>
