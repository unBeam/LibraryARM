<Page x:Class="LibraryARM.Veiw.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryARM.Veiw.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1350"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,0,0,0">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин: " ></TextBlock>
                <TextBox x:Name="TBoxLogin" Width="75" Margin="7,0,0,5"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль: "></TextBlock>
                <PasswordBox x:Name="PBoxPassword" Width="75"></PasswordBox>
            </StackPanel>

            <Button Name="BtnLogin" Click="BtnLogin_Click" Content="Войти" HorizontalAlignment="Center" Padding="15,0,15,3" Margin="0,10,0,0"></Button>

        </StackPanel>
    </Grid>
</Page>
