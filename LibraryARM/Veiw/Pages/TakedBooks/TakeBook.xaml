<Page x:Class="LibraryARM.Veiw.Pages.TakedBooks.TakeBook"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryARM.Veiw.Pages.TakedBooks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1350"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="TakeBook">

    <Grid>
        <StackPanel Margin="20">

            <Label Content="Читательский билет:" HorizontalAlignment="Center"/>
            <TextBox x:Name="readerTicket" Width="250" />
            <Button Content="Посмотреть взятые книги" Click="BackBook_Click" Margin="0,5,0,0" Width="250" />
            <Button Content="Назад" Click="Back_Click" Margin="0,5,0,0" Width="150"/>
        </StackPanel>
    </Grid>
</Page>
